{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"expiry": {
			"type": "integer",
			"format": "int32"
		},
		"expiryExpression": {
			"type": "string"
		},
		"expiryUnit": {
			"type": "string",
			"enum": [
				"NANOSECONDS",
				"MICROSECONDS",
				"MILLISECONDS",
				"SECONDS",
				"MINUTES",
				"HOURS",
				"DAYS"
			]
		},
		"touchOnRead": {
			"type": "boolean"
		},
		"compositeIndexes": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"fields": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"minItems": 2
					},
					"name": {
						"type": "string"
					}
				},
				"required": [
					"fields"
				]
			}
		}
	}
}
